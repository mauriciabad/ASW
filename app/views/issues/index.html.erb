<p id="notice"><%= notice %></p>

<div class="header">
  <h1>Issues</h1>
  <%= link_to 'Create issue', new_issue_path, class: "button top-right" %>
</div>

<div class="filter-container" id="issue-toolbar">
  <span class="filter-label">Filter by:</span>
  <a class="filter filter--active" href="">All</a>
  <a class="filter" href="">Open</a>
  <a class="filter" href="">My issues</a>
  <a class="filter" href="">Watching</a>
</div>

<h2>Issues (1â€“<%= @issues.size %> of <%= @issues.size %>)</h2>

<table>
  <thead>
    <tr>
      <th >Title</th>
      <!--<th>Description</th>-->
      <th title="Type">T</th>
      <th title="Priority">P</th>
      <th>Status</th>
      <th>Votes</th>
      <th>User</th>
      <th>Created</th>
      <th>Updated</th>
    </tr>
  </thead>
  
  <tbody>
    <% @issues.each do |issue| %>
      <tr>
        <td><%= link_to issue.title, issue %></td>
        <!--<td><%= issue.description %></td>-->
        <td>
          <% if issue.kind == 'bug' %>
            <%= link_to image_tag('bug.svg'), issue, title: "Show" %>
          <% end %>
          <% if issue.kind == 'enhancement' %>
            <%= link_to image_tag('enhancement.svg'), issue, title: "Show" %>
          <% end %>
          <% if issue.kind == 'proposal' %>
            <%= link_to image_tag('proposal.svg'), issue, title: "Show" %>
          <% end %>
          <% if issue.kind == 'task' %>
            <%= link_to image_tag('task.svg'), issue, title: "Show" %>
          <% end %>
        </td>
        <td>
          <% if issue.priority == 'minor' %>
            <%= link_to image_tag('minor.svg'), issue, title: "Show" %>
          <% end %>
          <% if issue.priority == 'major' %>
            <%= link_to image_tag('major.svg'), issue, title: "Show" %>
          <% end %>
          <% if issue.priority == 'trivial' %>
            <%= link_to image_tag('trivial.svg'), issue, title: "Show" %>
          <% end %>
          <% if issue.priority == 'blocker' %>
            <%= link_to image_tag('blocker.svg'), issue, title: "Show" %>
          <% end %>
          <% if issue.priority == 'critical' %>
            <%= link_to image_tag('critical.svg'), issue, title: "Show" %>
          <% end %>
        </td>
        <td></td>
        <td></td>
        <td><%= issue.user_id %></td>
        <td><%= issue.created_at %></td>
        <td></td>
        <td><%= link_to image_tag('eye_1.svg'), issue, title: "Show" %></td>
        <td><%= link_to image_tag('pen_1.svg'), edit_issue_path(issue), title: "Edit" %></td>
        <td><%= link_to image_tag('delete_1.svg'), issue, method: :delete, data: {confirm: 'Are you sure?'}, title: "Delete" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

